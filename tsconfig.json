{
	"compilerOptions": {
		"lib": ["es2021", "DOM"],
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"declaration": true,
		"declarationDir": "types",
		"types": [
			"@types/node"
		],
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
  "exclude": [
    "example",
    "node_modules/*"
  ],
	"include": [
		"lib/**/*"
	]
}