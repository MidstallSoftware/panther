{
  "compilerOptions": {
    "lib": ["es2018", "DOM"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "typings",
    "types": ["@types/node"],
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./lib/*"]
    }
  },
  "exclude": ["example", "node_modules/*"],
  "include": ["lib/**/*"]
}
